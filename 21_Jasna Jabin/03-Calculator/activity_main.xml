<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Here"/>
    <Button
        android:id="@+id/bt1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="150dp"
        android:text="1"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/bt2"
        android:layout_width="60dp"
        android:layout_toRightOf="@+id/bt1"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="150dp"
        android:text="2"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/bt3"
        android:layout_width="60dp"
        android:layout_toRightOf="@+id/bt2"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="150dp"
        android:text="3"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/bt4"
        android:layout_width="60dp"
        android:layout_below="@+id/bt1"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:text="4"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/bt5"
        android:layout_width="60dp"
        android:layout_below="@+id/bt1"
        android:layout_toRightOf="@+id/bt4"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:text="5"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/bt6"
        android:layout_width="60dp"
        android:layout_below="@+id/bt1"
        android:layout_toRightOf="@+id/bt5"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:text="6"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/bt7"
        android:layout_width="60dp"
        android:layout_below="@+id/bt4"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:text="7"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/bt8"
        android:layout_width="60dp"
        android:layout_below="@+id/bt5"
        android:layout_toRightOf="@+id/bt7"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:text="8"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/bt9"
        android:layout_width="60dp"
        android:layout_below="@+id/bt6"
        android:layout_toRightOf="@+id/bt8"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:text="9"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/btdot"
        android:layout_width="60dp"
        android:layout_below="@+id/bt7"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:text="."
        android:textSize="25dp"/>
    <Button
        android:id="@+id/bt0"
        android:layout_width="60dp"
        android:layout_below="@+id/bt8"
        android:layout_toRightOf="@+id/btdot"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:text="0"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/btc"
        android:layout_width="60dp"
        android:layout_below="@+id/bt9"
        android:layout_toRightOf="@+id/bt0"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:text="C"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/btadd"
        android:layout_width="120dp"
        android:layout_toRightOf="@+id/bt3"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="150dp"
        android:text="+"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/btminus"
        android:layout_width="120dp"
        android:layout_below="@+id/btadd"
        android:layout_toRightOf="@+id/bt6"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:text="-"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/btmul"
        android:layout_width="120dp"
        android:layout_below="@+id/btminus"
        android:layout_toRightOf="@+id/bt9"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:text="*"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/btdiv"
        android:layout_width="120dp"
        android:layout_below="@+id/btmul"
        android:layout_toRightOf="@+id/btc"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:text="/"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/btequal"
        android:layout_width="460dp"
        android:layout_height="60dp"
        android:layout_below="@+id/bt0"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:text="="
        android:textSize="25dp"
        />




</RelativeLayout>